@page "/counter"

<PageTitle>Счетчик</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Счетчик</MudText>
<MudText Class="mb-4">Текущий счет: @currentCount</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Нажмите на меня</MudButton>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
